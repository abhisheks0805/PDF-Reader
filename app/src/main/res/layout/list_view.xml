<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pdf_image"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="510dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/pdf_icon"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:text="Lorem Ipsum"
            android:textSize="16sp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20843KB"
                android:textSize="14sp"
                android:layout_below="@id/file_name"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="40dp"
                android:id="@+id/fileSize"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                android:layout_below="@id/file_name"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:id="@+id/fileDate"
                android:layout_marginLeft="10dp"></TextView>

        </LinearLayout>



    </RelativeLayout>





    <ImageButton
        android:id="@+id/moreOptnBtn"
        android:padding="15dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="#000000FF"
        android:src="@drawable/ic_baseline_more_vert_24"
        tools:src="@drawable/ic_baseline_more_vert_24"
        android:layout_marginRight="10dp" />


</RelativeLayout>